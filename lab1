let age: Int = currentYear - birthYear
let height: Double = 1.61
let hometown: String = "Актобе"
let university: String = "КБТУ"
let course: String = "последний курс"

let hobby1: String = "готовить"
let hobby2: String = "волейбол"
let hobby3: String = "музыка"
let hobby4: String = "шоппинг"
let favoriteNumber1: Int = 21
let favoriteNumber2: Int = 17
let favoriteEmoji: String = "обезьянка, которая закрывает глаза"
let favoriteFlower: String = "белые розы"

let futureGoals: String = "Хочу устроиться на работу по специальности, иметь стабильный заработок и посетить несколько стран."

let lifeStory = """
Меня зовут \(firstName) \(lastName).
Родилась в \(hometown) в \(birthYear) году, \(birthDay).
Сейчас мне \(age) лет. Мой рост — \(height) м.
